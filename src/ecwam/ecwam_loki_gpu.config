[default]
mode = "idem"
role = "kernel"
expand =  true
strict =  true
replicate = true
enable_imports = true

# Ensure that we are never adding these to the tree, and thus
# do not attempt to look up the source files for these.
disable = [
  'yomhook', 'abor1', 'abort1', 'gstats', 'yowgstats', 'wam_user_clock',
  'parkind1', 'propag_wam', 'newwind', 'oml_mod', 'field_module', 'incdate',
  'ieee_arithmetic',  # intrinsic modules (should have INTRINSIC in their USE statement)
  'mfeb_length', 'cdm', # internal functions
  'outwspec_io_serv_handler', 'outint_io_serv_handler', 'ifstowam_handler', # procedure pointers
  '*%sync_host', '*%get_device_data', '*%get_device_data_rdwr'
]

# modules to be parsed but not transformed
ignore = ['yowgrid', 'yowtest', 'yowshal']

# Prune the tree for these to ensure they are not processed by transformations
block = ['ec_parkind', 'parkind_wave', 'yowdrvtype']

# Utility calls and IO statements to remove
[transformations.RemoveCodeTransformation]
  module = "loki.transformations"
[transformations.RemoveCodeTransformation.options]
  remove_marked_regions = true
  remove_dead_code = false
  call_names =['dr_hook', 'abort1']
  intrinsic_names = ['write(iu06']
  kernel_only = true

# Define entry point for call-tree transformation
[routines.wamintgr_loki_gpu]
  role = "driver"
  expand = true
  replicate = false
  real_kind = 'JWRB'

# add inline function calls here to force the plan to add them
[routines.chnkmin]
[routines.ns_gc]
[routines.stress_gc]
[routines.transf_snl]
[routines.transf]
[routines.aki_ice]

# Disable replication for modules containing global variables
[routines.yowaltas]
  expand = false
  replicate = false
[routines.yowcoup]
  expand = false
  replicate = false
[routines.yowcout]
  expand = false
  replicate = false
[routines.yowfred]
  expand = false
  replicate = false
[routines.yowice]
  expand = false
  replicate = false
[routines.yowindn]
  expand = false
  replicate = false
[routines.yowparam]
  expand = false
  replicate = false
[routines.yowpcons]
  expand = false
  replicate = false
[routines.yowphys]
  expand = false
  replicate = false
[routines.yowstat]
  expand = false
  replicate = false
[routines.yowtabl]
  expand = false
  replicate = false
[routines.yowwind]
  expand = false
  replicate = false
[routines.yowwndg]
  expand = false
  replicate = false

# Define indices and bounds for array dimensions
[dimensions.horizontal]
  size = "KIJL"
  index = "IJ"
  bounds = ["KIJS", "KIJL"]
  aliases = ["NPROMA_WAM"]

[dimensions.block_dim]
  size = "NCHNK"
  index = "ICHNK"
